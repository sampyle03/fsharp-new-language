<Window x:Class="NumeraGUI.PlotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Numera Plotting" Height="800" Width="1200"
        Loaded="PlotWindow_Loaded">
    <DockPanel>
        <!-- Navigation Bar -->
        <Grid DockPanel.Dock="Top" Background="#6CB4EE" Height="65">
            <TextBlock Text="Numera"
                   FontSize="30"
                   FontWeight="Bold"
                   FontFamily="Courier New"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>

            <Button x:Name="HelpButton"
                Width="32" Height="32"
                Margin="0,4,40,4"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Background="Transparent"
                BorderThickness="0"
                Padding="0"
                Click="HelpButton_Click"
                ToolTip="Click for help"
                ToolTipService.InitialShowDelay="200">
                <Grid Width="32" Height="32">
                    <Ellipse Width="32" Height="32"
                         Stroke="Black"
                         StrokeThickness="3"
                         Fill="Transparent"/>
                    <TextBlock Text="?"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="Black"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                </Grid>
            </Button>
        </Grid>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Expression input -->
                <RowDefinition Height="*"/>
                <!-- Plot canvas -->
            </Grid.RowDefinitions>

            <!-- Expression + Button -->
            <StackPanel Grid.Row="0"
                        HorizontalAlignment="Center"
                        Width="300"
                        Orientation="Vertical"
                        Margin="0,10,0,20">

                <!-- Label -->
                <TextBlock Text="Enter expression"
                           FontSize="18"
                           FontWeight="SemiBold"
                           FontFamily="Courier New"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Expression input -->
                <TextBox x:Name="FunctionTextBox"
                         Height="32"
                         FontSize="16"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         />

                <!-- Plot button -->
                <Button x:Name="PlotButton"
                        Content="Plot"
                        FontSize="14"
                        FontFamily="Courier New"
                        Width="120"
                        Height="32"
                        Margin="0,15,0,0"
                        Click="PlotButton_Click"
                        HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Plot Canvas -->
            <Border Grid.Row="1"
                    BorderBrush="Gray"
                    BorderThickness="2"
                    CornerRadius="6"
                    Background="White"
                    Padding="0"
                    >
                <Canvas x:Name="PlotCanvas"
                        Background="White"
                        />
            </Border>
        </Grid>
    </DockPanel>
</Window>
