<!--
    PlotWindow.xaml
    ----------------
    This file defines the layout of the plotting window in the Numera application.

    The purpose of this window is to:
      - allow the user to enter a graph command (e.g. graph x = x^2, (-5, 5);),
      - provide buttons to plot, clear, or get help,
      - and display the resulting graph inside a Canvas.

    All plotting logic (axes, scaling, ticks, drawing the curve)
    is handled in PlotWindow.xaml.cs.
    This file only defines the visual structure of the window.
-->

<Window x:Class="NumeraGUI.PlotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Numera Plotting"
        Height="650"
        Width="1200"
        Loaded="PlotWindow_Loaded">

    <!--
        Root grid used to split the window into:
          - a header row,
          - a control/input row,
          - and the main plotting area.
    -->
    <Grid>

        <!-- Define the three vertical sections of the window -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="Auto"/>  <!-- Controls -->
            <RowDefinition Height="*"/>     <!-- Plot area -->
        </Grid.RowDefinitions>

        <!-- ===================== HEADER ===================== -->
        <!-- Simple header displaying the application name -->
        <Border Grid.Row="0"
                Background="#74B9F0"
                Padding="10">
            <TextBlock Text="Numera"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- ===================== CONTROLS ===================== -->
        <!--
            This section contains:
              - the graph input box,
              - the Plot button,
              - a Clear button,
              - and a Help button.
        -->
        <StackPanel Grid.Row="1"
                    Margin="0,20"
                    HorizontalAlignment="Center">

            <!-- Label describing the expected input -->
            <TextBlock Text="Enter expression"
                       Margin="0,0,0,5"
                       HorizontalAlignment="Center"/>

            <!--
                TextBox where the user enters a graph command.
                Example format:
                  graph x = x^2, (-5, 5);
            -->
            <TextBox x:Name="FunctionTextBox"
                     Width="350"
                     HorizontalAlignment="Center"/>

            <!-- Buttons related to plotting actions -->
            <StackPanel Orientation="Horizontal"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center">

                <!-- Triggers plotting in PlotWindow.xaml.cs -->
                <Button Content="Plot"
                        Width="100"
                        Margin="5,0"
                        Click="PlotButton_Click"/>

                <!-- Clears the current plot and input -->
                <Button Content="Clear"
                        Width="100"
                        Margin="5,0"
                        Click="ClearButton_Click"/>

                <!-- Opens a short help message explaining graph syntax -->
                <Button Content="Help"
                        Width="100"
                        Margin="5,0"
                        Click="HelpButton_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- ===================== PLOT AREA ===================== -->
        <!--
            The border provides a visible frame around the plot.
            All drawing happens on the Canvas inside this border.
        -->
        <Border Grid.Row="2"
                Margin="20"
                BorderBrush="Gray"
                BorderThickness="1">

            <!--
                Canvas used for rendering:
                  - axes,
                  - tick marks and numeric labels,
                  - and the function curve itself.

                Nothing is drawn here directly in XAML;
                everything is drawn programmatically in PlotWindow.xaml.cs.
            -->
            <Canvas x:Name="PlotCanvas"
                    Background="White"/>
        </Border>

    </Grid>
</Window>
