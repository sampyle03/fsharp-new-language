<Window x:Class="NumeraGUI.PlotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Numera - Plotting"
        Height="800"
        Width="1200">

    <DockPanel>
        <!-- Navigation Bar (same as MainWindow) -->
        <Grid DockPanel.Dock="Top" Background="#6CB4EE" Height="65">
            <TextBlock Text="Numera"
                       FontSize="30"
                       FontWeight="Bold"
                       FontFamily="Courier New"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <Button x:Name="HelpButton"
                    Width="32" Height="32"
                    Margin="0,4,60,4"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Click="HelpButton_Click"
                    ToolTip="Click for help"
                    ToolTipService.InitialShowDelay="200">
                <Grid Width="32" Height="32">
                    <Ellipse Width="32" Height="32"
                             Stroke="Black"
                             StrokeThickness="3"
                             Fill="Transparent"/>
                    <TextBlock Text="?"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="Black"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </Button>
        </Grid>

        <!-- Main plotting content -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <!-- Inputs row -->
                <RowDefinition Height="Auto" />
                <!-- Plot area -->
                <RowDefinition Height="*" />
                <!-- Bottom buttons -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Input controls row -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- f(x) expression -->
                <TextBlock Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"
                           Text="f(x) =" />
                <TextBox x:Name="FunctionTextBox"
                         Grid.Column="1"
                         Height="25"
                         Margin="0,0,10,0"
                         Text="x"
                         ToolTip="Enter function of x, e.g. x^2 + 2*x + 1" />

                <!-- Plot button -->
                <Button x:Name="PlotButton"
                        Grid.Column="2"
                        Content="Plot"
                        Width="80"
                        Height="28"
                        Click="PlotButton_Click" />
            </Grid>

            <!-- Plot area -->
            <Grid Grid.Row="1" Height="500" Width="700">
                <Border BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="10"
                        Background="White">
                    <Canvas x:Name="PlotCanvas"
                            Background="White"
                            Margin="40,10,10,30"
                            Height="400" />
                </Border>

                <!-- Axis labels -->
                <TextBlock Text="y"
                           FontWeight="Bold"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           Margin="15,15,0,0"
                           IsHitTestVisible="False" />  

                <TextBlock Text="x"
                           FontWeight="Bold"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Right"
                           Margin="0,0,25,25"
                           IsHitTestVisible="False" />
            </Grid>

            <!-- Bottom button -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,5,0,0">
                <Button x:Name="ClearPlotButton"
                        Content="Clear plot"
                        Padding="8,4"
                        Margin="0,0,5,0"
                        Click="ClearPlotButton_Click" />
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
