<Window x:Class="NumeraGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Numera" Height="800" Width="1200">
    <DockPanel>
        <!-- Navigation Bar -->
        <Grid DockPanel.Dock="Top" Background="#6CB4EE" Height="65">
            <TextBlock Text="Numera"
                       FontSize="30"
                       FontWeight="Bold"
                       FontFamily="Courier New"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <Button x:Name="HelpButton"
                    Width="32" Height="32"
                    Margin="0,4,40,4"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Click="HelpButton_Click"
                    ToolTip="Click for help"
                    ToolTipService.InitialShowDelay="200">
                <Grid Width="32" Height="32">
                    <Ellipse Width="32" Height="32"
                             Stroke="Black"
                             StrokeThickness="3"
                             Fill="Transparent"/>
                    <TextBlock Text="?"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="Black"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </Button>
        </Grid>

        <!-- Main Body -->
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel (Input/Output/Errors/Buttons) -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <!-- Input -->
                <TextBlock Text="Input:"
                           FontSize="18"
                           FontFamily="Courier New"
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <Border Background="#F2F2F2" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="6">
                    <TextBox x:Name="InputBox"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             FontSize="16"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="10"
                             Height="170"/>
                </Border>

                <!-- Output -->
                <TextBlock Text="Output:"
                           FontSize="18"
                           FontFamily="Courier New"
                           FontWeight="Bold"
                           Margin="0,15,0,5"/>
                <Border Background="#F2F2F2" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="6">
                    <TextBox x:Name="OutputBox"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             FontSize="16"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="10"
                             Height="170"/>
                </Border>

                <!-- Errors -->
                <TextBlock Text="Errors:"
                           FontSize="18"
                           FontFamily="Courier New"
                           FontWeight="Bold"
                           Margin="0,15,0,5"/>
                <Border Background="#F2F2F2" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="6">
                    <TextBox x:Name="ErrorBox"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             FontSize="16"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="10"
                             Height="120"/>
                </Border>

                <!-- Buttons Row -->
                <Grid Width="260" Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Run Button -->
                    <Button x:Name="RunButton"
                            Grid.Column="0"
                            Content="Run"
                            FontFamily="Courier New"
                            FontWeight="SemiBold"
                            FontSize="16"
                            Width="80"
                            Height="35"
                            Background="#6CB4EE"
                            Foreground="White"
                            BorderBrush="Transparent"
                            CornerRadius="6"
                            Click="RunButton_Click"/>

                    <!-- Spacer -->
                    <Border Grid.Column="1" Background="Transparent"/>

                    <!-- Clear Button -->
                    <Button x:Name="ClearButton"
                            Grid.Column="2"
                            Content="Clear"
                            FontFamily="Courier New"
                            FontWeight="SemiBold"
                            FontSize="16"
                            Width="80"
                            Height="35"
                            Background="#E0E0E0"
                            Foreground="Black"
                            BorderBrush="Transparent"
                            CornerRadius="6"
                            Click="ClearButton_Click"/>
                </Grid>
            </StackPanel>

            <!-- Right Panel (Variables) -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Variables:"
                           FontSize="18"
                           FontFamily="Courier New"
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>

                <Border Background="#F2F2F2"
