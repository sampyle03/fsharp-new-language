<Window x:Class="NumeraGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Numera" Height="350" Width="525">
    <DockPanel>
        <!-- Navigation Bar -->
        <Grid DockPanel.Dock="Top" Background="#6CB4EE" Height="40">
            <!-- Centered Title -->
            <TextBlock Text="Numera"
                       FontSize="22"
                       FontWeight="Bold"
                       FontFamily="Courier New"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <!-- Right-aligned Icon -->
            <Button Width="32" Height="32"
                    Margin="0,4,8,4"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    ToolTip="Help"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0">
                <Grid Width="28" Height="28">
                    <Ellipse Width="28" Height="28"
                             Stroke="Black"
                             StrokeThickness="2"
                             Fill="Transparent"/>
                    <TextBlock Text="?" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="Black"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </Button>
        </Grid>
        <!-- Main Content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!-- First label, box, and buttons -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="16,0,45,32">
                <TextBlock Text="Enter expression:"
                           FontFamily="Courier New"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"
                           HorizontalAlignment="Left"/>
                <TextBox x:Name="InputBox"
                         Width="170" Height="160"
                         Margin="0"
                         FontSize="18"
                         TextAlignment="Center"
                         Background="#FFEFEFEF"
                         BorderBrush="Black" 
                         BorderThickness="1.5"/>
                <!-- Buttons Row as Grid -->
                <Grid Width="170" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!-- Run Button (left) -->
                    <Button Grid.Column="0" Padding="6,2" Margin="0,0,8,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Viewbox Width="16" Height="16" VerticalAlignment="Center">
                                <Canvas Width="16" Height="16">
                                    <Path Data="M2,2 L14,8 L2,14 Z" Fill="Green"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="Run"
                                       Margin="4,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="13"
                                       FontFamily="Courier New"/>
                        </StackPanel>
                    </Button>
                    <!-- Clear Button (right) -->
                    <Button Grid.Column="2" Padding="6,2" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock FontFamily="Segoe Fluent Icons"
                               Text=""
                               FontSize="18"
                               Foreground="Red"
                               VerticalAlignment="Center"/>

                            <TextBlock Text="Clear"
                                       Margin="4,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="13"
                                       FontFamily="Courier New"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
            <!-- Second label and box -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="45,0,16,32">
                <TextBlock Text="Output:"
                           FontSize="13"
                           FontFamily="Courier New"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"
                           HorizontalAlignment="Left"/>
                <TextBox x:Name="OutputBox"
                         Width="170" Height="160"
                         Margin="0,0,0,29"
                         FontSize="18"
                         TextAlignment="Center"
                         Background="#FFEFEFEF"
                         BorderBrush="Black" 
                         BorderThickness="1.5"/>
               
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>