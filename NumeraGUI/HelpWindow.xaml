<Window x:Class="NumeraGUI.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Numera Help"
        Height="400"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <!-- Blue bar -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="Auto"/>
            <!-- Close button -->
        </Grid.RowDefinitions>

        <!-- Blue top bar -->
        <Grid Grid.Row="0" Background="#6CB4EE" Height="55">
            <TextBlock Text="How to use Numera"
                       FontSize="24"
                       FontWeight="Bold"
                       FontFamily="Courier New"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="Black"/>
        </Grid>

        <!-- Scrollable text content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Margin="20">
            <TextBlock TextAlignment="Center"
                       FontFamily="Courier New"
                       FontSize="17"
                       TextWrapping="Wrap"
                       Text="1. Enter an expression in the left-hand box.&#x0a;2. Click Run to evaluate the expression.&#x0a;3. The result appears in the Output box.&#x0a;4. Any variables you define will be shown in the Current Variables box.&#x0a;5. Errors are shown in the Errors panel at the bottom of the window.&#x0a;">
            </TextBlock>
        </ScrollViewer>

        <!-- Close button -->
        <Button Grid.Row="2"
                Content="Close"
                FontFamily="Courier New"
                Width="80"
                Height="30"
                HorizontalAlignment="Center"
                Margin="0,10,0,20"
                IsDefault="True"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
